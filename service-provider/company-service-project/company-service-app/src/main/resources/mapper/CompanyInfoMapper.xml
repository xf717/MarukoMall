<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.db.chaomaxs.companyservice.dal.mysql.mapper.company.CompanyInfoMapper">

  <!-- 可根据自己的需求，是否要使用 -->
  <resultMap type="com.db.chaomaxs.companyservice.dal.mysql.dataobject.company.CompanyInfoDO"
    id="BaseResultMap">
    <result property="id" column="id"/>
    <result property="userId" column="user_id"/>
    <result property="logoUrl" column="logo_url"/>
    <result property="industryId" column="industry_id"/>
    <result property="industryName" column="industry_name"/>
    <result property="provinceName" column="province_name"/>
    <result property="provinceCode" column="province_code"/>
    <result property="cityName" column="city_name"/>
    <result property="cityCode" column="city_code"/>
    <result property="areaName" column="area_name"/>
    <result property="areaCode" column="area_code"/>
    <result property="address" column="address"/>
    <result property="fullName" column="full_name"/>
    <result property="shortName" column="short_name"/>
    <result property="scopeDictionaryId" column="scope_dictionary_id"/>
    <result property="developmentStageDictionaryId" column="development_stage_dictionary_id"/>
    <result property="licenseUrl" column="license_url"/>
    <result property="startWorkTime" column="start_work_time"/>
    <result property="endWorkTime" column="end_work_time"/>
    <result property="restTimeDictionaryId" column="rest_time_dictionary_id"/>
    <result property="workOvertimeDictionaryId" column="work_overtime_dictionary_id"/>
    <result property="intro" column="intro"/>
    <result property="enabled" column="is_enabled"/>
    <result property="status" column="status"/>
    <result property="createTime" column="create_time"/>
    <result property="createBy" column="create_by"/>
    <result property="updateTime" column="update_time"/>
    <result property="updateBy" column="update_by"/>
  </resultMap>
  <select id="listCompanyInfoByIds" resultMap="BaseResultMap">
    select id,full_name,scope_dictionary_id,development_stage_dictionary_id,industry_name
    from company_info
    where id in
    <foreach collection="ids" item="item" index="" open="(" close=")" separator=",">
      #{item}
    </foreach>

  </select>
</mapper>
